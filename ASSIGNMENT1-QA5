#include <iostream>
using namespace std;

int main(){
    int T;
    cin >> T;

    while(T--){
        long long N, H, W;
        cin >> N >> H >> W;

        long long low = max(H, W);
        long long high = max(H, W) * N;
        long long ans = high;

        while(low <= high){
            long long mid = (low + high) / 2;

            long long fit = (mid / W) * (mid / H);

            if(fit >= N){
                ans = mid;
                high = mid - 1;
            }else{
                low = mid + 1;
            }
        }

        cout << ans << endl;
    }
    return 0;
}
