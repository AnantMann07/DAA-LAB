#include <iostream>
using namespace std;

int main(){
    int A[] = {1, 3, 2, 4};
    int n = 4;
    int k = 2;

    int specialty = 0;

    for(int l = 0; l < n; l++){
        bool isSpecial = false;

        for(int i = 0; i <= l; i++){
            for(int j = l; j < n; j++){
                int count = 0;

                for(int p = i; p <= j; p++){
                    if(A[p] > A[l])
                        count++;
                }

                if(count == k){
                    isSpecial = true;
                    break;
                }
            }
            if(isSpecial) break;
        }

        if(isSpecial)
            specialty += A[l];
    }

    cout << specialty << endl;
    return 0;
}
